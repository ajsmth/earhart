  "peerDependencies": {
    "react": ">=16",
    "react-native": "^0.61.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/runtime": "^7.7.2",
    "@testing-library/jest-native": "^3.0.3",
    "@testing-library/react-native": "^5.0.1",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-native": "^0.60.23",
    "husky": "^3.1.0",
    "metro-react-native-babel-preset": "^0.57.0",
    "prettier": "^1.19.1",
