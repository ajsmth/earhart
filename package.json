{
  "name": "react-native-library-tsdx",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/react-native-library-tsdx.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
