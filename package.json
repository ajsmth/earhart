    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-native": "^0.61.4",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^24.1.0",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
